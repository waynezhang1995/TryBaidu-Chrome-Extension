{
    "manifest_version": 2,
    "name": "trybaidu",
    "author": "Wayne Zhang",
    "description": "Save your time from switching between Baidu and Google",
    "version": "0.0.2",
    "icons": {
        "16": "images/icons/16.png",
        "32": "images/icons/32.png",
        "48": "images/icons/48.png",
        "64": "images/icons/64.png",
        "128": "images/icons/128.png",
        "256": "images/icons/256.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icons/16.png",
            "32": "images/icons/32.png",
            "48": "images/icons/48.png",
            "64": "images/icons/64.png",
            "128": "images/icons/128.png",
            "256": "images/icons/256.png"
        },
        "default_popup": "html/popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.google.ca/*", "https://www.google.com/*"],
        "exclude_matches": ["https://www.google.ca/maps*", "https://www.google.ca/flights*", "https://www.google.com/maps*", "https://www.google.com/flights*", "https://www.google.com/doodles*"],
        "js": ["libs/jquery.js", "scripts/contentscript.js"],
        "css": ["css/style.css"],
        "run_at": "document_end"
    }],
    "web_accessible_resources": [
        "images/icons/48.png",
        "images/close-button.png",
        "css/style.css"
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "libs/jquery.js",
            "scripts/background.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs"
    ]
}