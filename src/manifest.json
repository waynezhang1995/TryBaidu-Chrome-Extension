{
    "manifest_version": 2,
    "minimum_chrome_version": "32",
    "name": "trybaidu",
    "description": "",
    "version": "0.0.0",
    "icons": {
        "16": "images/icons/16.png",
        "32": "images/icons/32.png",
        "48": "images/icons/48.png",
        "64": "images/icons/64.png",
        "128": "images/icons/128.png",
        "256": "images/icons/256.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icons/16.png",
            "32": "images/icons/32.png",
            "48": "images/icons/48.png",
            "64": "images/icons/64.png",
            "128": "images/icons/128.png",
            "256": "images/icons/256.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://www.google.ca/*", "https://www.google.com/*"],
        "js": ["libs/jquery.js", "scripts/contentscript.js"],
        "run_at": "document_end"
    }],
    "web_accessible_resources": [
        "images/icons/48.png",
        "images/close-button.png"
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "libs/jquery.js",
            "scripts/background.js"
        ]
    },
    "permissions": [
        "contextMenus"
    ]
}